<%- include("templates/header") %> 

<main style="font-size: 30px;">

    <section class="py-5 text-center">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="display-4 fw-bold mb-5"> Bookmarks </h1>
          <p class="text-body-secondary"> <%= name %>'s bookmarks. <br>
            Click on the card to view the dog breed. <br>
            Click on the icon for shortcut un-bookmark and re-bookmark! </p>
        </div>
      </div>
    </section>
  
    <div class="album py-5">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            <div class="col">
              <div class="card shadow-sm" onclick="window.location.href='/details?Corgi'; configureBookmark()">
                <img src="/happyCorgi.jpg">
                <div class="card-body">
                  <p class="card-text">Golden Retriever</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn1 btn-sm btn-outline-secondary">Bookmarked</button>
                    </div>
                    <small class="text-body-secondary">9 mins</small>
                  </div>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card shadow-sm">
                <img src="/happyCorgi.jpg">               
                <div class="card-body">
                  <p class="card-text">German Shepherd</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn2 btn-sm btn-outline-secondary">Save</button>
                    </div>
                    <small class="text-body-secondary">9 mins</small>
                  </div>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card shadow-sm">
                <img src="/happyCorgi.jpg">               
                <div class="card-body">
                  <p class="card-text">Husky</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn3 btn-sm btn-outline-secondary">Save </button>
                    </div>
                    <small class="text-body-secondary">9 mins</small>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
  
</main>

<%- include("templates/footer") %> 