<!DOCTYPE html>
<html lang="en">
    <head>
        <title>iDealpup - Find Your Ideal Dog Breed</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <!-- Custom CSS -->
        <style>
            /* Background color */
            body {
                background-color: #C8E6C9;
            }
            /* Header style */
            .header {
                background-color: #2E7D32;
                color: white;
                padding: 10px;
            }
            /* Container style */
            .container {
                background-color: #FFFFFF;
                padding: 20px;
            }
            /* Form style */
            form {
                margin-bottom: 20px;
            }
        </style>
        <script
            src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script
            src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script src="/js/filters.js"></script>


    </head>
    <body>
        <%- include('templates/header') %>

            <div class="header">
                <h1>Filters - Find Your Ideal Dog Breed!</h1>
                <h3>Required fields are marked with '*'</h3>
            </div>

            <br>

            <div class="container">
                <form id="filter-form" method="POST"
                    action="/description">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3> * Height:</h3>
                            <div class="radio">
                                <label><input type="radio" name="height"
                                        value="small">Small</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="height"
                                        value="medium">Medium</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="height"
                                        value="large">Large</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h3> * Weight:</h3>
                            <div class="radio">
                                <label><input type="radio" name="weight"
                                        value="light">Light</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="weight"
                                        value="medium">Medium</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="weight"
                                        value="heavy">Heavy</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3>Fur Color:</h3>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="red">Red</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="black">Black</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="white">White</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="cream">Cream</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="blue">Blue</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="grey">Grey</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="apricot">Apricot</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="golden">Golden</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="color"
                                        value="tan">Tan</label>
                            </div>
                        </div>
                        <br>
                        <div class="col-sm-6">
                            <h3>Trainability:</h3>
                            <div class="radio">
                                <label><input type="radio" name="size"
                                        value="low">Low</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="size"
                                        value="average">Average</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="size"
                                        value="high">High</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="size"
                                        value="very high">Very High</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="size"
                                        value="exceptional">Exceptional</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3>Traits (Choose 3):</h3>
                            <div class="checkbox">
                                <label><input type="checkbox" name="traits[]"
                                        value="loyal"
                                        onclick="limitCheckboxes()">Loyal</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="strong"
                                        onclick="limitCheckboxes()">Strong</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="independent"
                                        onclick="limitCheckboxes()">Independent</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="curious"
                                        onclick="limitCheckboxes()">Curious</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="friendly"
                                        onclick="limitCheckboxes()">Friendly</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="confident"
                                        onclick="limitCheckboxes()">Confident</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="affectionate"
                                        onclick="limitCheckboxes()">Affectionate</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="trainable"
                                        onclick="limitCheckboxes()">Trainable</label>
                            <!-- </div> -->
                        <!-- </div> -->
                        <!-- <div class="col-sm-6"> -->
