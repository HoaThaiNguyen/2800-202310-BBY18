                                <label><input type="checkbox" name="traits[]"
                                        value="good natured"
                                        onclick="limitCheckboxes()">Good Natured</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="intelligent"
                                        onclick="limitCheckboxes()">Intelligent</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="gentle"
                                        onclick="limitCheckboxes()">Gentle</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="energetic"
                                        onclick="limitCheckboxes()">Energetic</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="patient"
                                        onclick="limitCheckboxes()">Patient</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="playful"
                                        onclick="limitCheckboxes()">Playful</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="social"
                                        onclick="limitCheckboxes()">Social</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="kind"
                                        onclick="limitCheckboxes()">Kind</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="sensitive"
                                        onclick="limitCheckboxes()">Sensitive</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="charming"
                                        onclick="limitCheckboxes()">Charming</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="protective"
                                        onclick="limitCheckboxes()">Protective</label>
                            <!-- </div>
                            <div class="checkbox"> -->
                                <label><input type="checkbox" name="traits[]"
                                        value="athletic"
                                        onclick="limitCheckboxes()">Athletic</label>
                            </div>

                        </div>
                    </div>
                </form>

                <a href='/description'><button type="submit" class="btn
