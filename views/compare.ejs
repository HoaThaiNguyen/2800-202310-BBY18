                                        <option value="<%= breeds[i].Breed %>"><%= breeds[i].Breed %></option>
                                    <% } %>
                                    
                                    <script>
                                        var dogs = document.getElementsByClassName("dropdown1");
                                        for (var i = 0; i < dogs.length; i++) {
                                        dogs.item(i).id = i;
                                }
                                    </script>
                                </select>
                            </label>
